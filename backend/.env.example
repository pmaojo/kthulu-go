POSTGRES_PASSWORD=postgres
DB_PORT=5432
API_PORT=8080
WEB_PORT=3000
JWT_SECRET=supersecret
JWT_REFRESH_SECRET=superrefreshsecret
DATABASE_URL=postgres://postgres:postgres@localhost:5432/app?sslmode=disable
# Database Configuration
POSTGRES_PASSWORD=your_postgres_password
DATABASE_URL=postgres://postgres:your_password@localhost:5432/kthulu?sslmode=disable

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# Server Configuration
API_PORT=8080
WEB_PORT=3000
HTTP_ADDR=:8080

# Server Timeouts
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d

# SMTP Configuration (for email notifications)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourapp.com

# Environment (development, production, test)
ENV=development
VERIFACTU_SIF_CODE=01 # Two-character SIF code assigned by AEAT

# Feature flag configuration
FF_PROVIDER=
FF_URL=
FF_API_KEY=
FF_ENVIRONMENT=
FF_APP_NAME=kthulu

# Observability Configuration
TRACE_SAMPLE_RATE=1
# TRACE_EXPORTER options: "stdout" (default) or "jaeger"
TRACE_EXPORTER=stdout
# When using Jaeger set the collector endpoint, e.g.:
# OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces
