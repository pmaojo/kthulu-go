# Database Configuration
DATABASE_URL=sqlite:///kthulu.db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# Server Configuration
API_PORT=8080
WEB_PORT=3000
HTTP_ADDR=:8080

# Server Timeouts
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_for_kthulu
JWT_REFRESH_SECRET=dev_refresh_secret_key_for_kthulu
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d

# Rate Limiting Configuration
RATE_LIMIT_RPS=100
RATE_LIMIT_BURST=200

# Environment
ENV=development
LOG_LEVEL=info

# Observability Configuration
TRACE_SAMPLE_RATE=1
TRACE_EXPORTER=stdout

# Feature Flags (disabled for development)
FF_PROVIDER=
FF_URL=
FF_API_KEY=
FF_ENVIRONMENT=
FF_APP_NAME=kthulu
