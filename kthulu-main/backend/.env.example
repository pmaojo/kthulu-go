# Environment Configuration
ENV=development

# Database Configuration - Optimal: SQLite by default
# DB_DRIVER options: "sqlite" (default) or "postgres"
DB_DRIVER=sqlite
# For SQLite (default): just the database file path
DATABASE_URL=./kthulu.db
# For PostgreSQL: uncomment and set the full connection string
# DATABASE_URL=postgres://username:password@localhost:5432/database_name?sslmode=disable

DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=1h

# HTTP Server Configuration
HTTP_ADDR=:8080
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s
SERVER_IDLE_TIMEOUT=60s

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h  # 7 days (7 * 24h)

# SMTP Configuration (optional)
SMTP_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# Observability Configuration
TRACE_SAMPLE_RATE=1
# TRACE_EXPORTER options: "stdout" (default) or "jaeger"
TRACE_EXPORTER=stdout
# When TRACE_EXPORTER=jaeger, configure the Jaeger endpoint, e.g.:
# OTEL_EXPORTER_JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Active Modules (comma-separated, leave empty for all modules)
# Available modules: health,auth,user,access,notifier,organization,contact,product,invoice,inventory,calendar,static
# MODULES=health,auth,user,access,notifier,organization,contact,product,invoice,inventory,calendar,static

# VeriFactu configuration
VERIFACTU_SIF_CODE=
